{
    "name": "Jira Sync on File Edited",
    "version": "1.0.0",
    "description": "Syncs project-task.md with Jira when spec files are edited",
    "when": {
        "type": "fileEdited",
        "patterns": [
            "**/.kiro/specs/**/*.md"
        ]
    },
    "then": {
        "type": "runCommand",
        "command": "powershell -ExecutionPolicy Bypass -File \"Applications/AITooling/Services/SecurityService/.kiro/scripts/jira-sync.ps1\" -Mode SyncFromFileEdited",
        "timeout": 60
    }
}