# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection settings for all services

# Database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/wealthfid

# Database provider (PostgreSQL, SqlServer, MySQL, SQLite)
DATABASE_PROVIDER=PostgreSQL

# Database host
DATABASE_HOST=localhost

# Database port
DATABASE_PORT=5432

# Database name
DATABASE_NAME=wealthfid

# Database user
DATABASE_USER=postgres

# Database password
DATABASE_PASSWORD=password

# ============================================================================
# ASP.NET Core Configuration
# ============================================================================
# Common ASP.NET Core settings for all services

# Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# Service URLs (for local development)
# DataLoaderService
DATALOADER_SERVICE_URL=https://localhost:5001

# SecurityService
SECURITY_SERVICE_URL=https://localhost:5003

# TaskJiraSyncService
TASKJIRASYNC_SERVICE_URL=https://localhost:5005

# ============================================================================
# JWT Configuration
# ============================================================================
# JWT token settings for SecurityService

# JWT secret key (minimum 32 characters for HS256)
# IMPORTANT: Use a strong, random key in production
JWT_SECRET=your-jwt-secret-key-min-32-characters-long-here

# JWT issuer (should match your service URL)
JWT_ISSUER=https://localhost:5003

# JWT audience (should match your client URL)
JWT_AUDIENCE=https://localhost:5001

# JWT token expiration in minutes
JWT_EXPIRATION_MINUTES=15

# JWT refresh token expiration in days
JWT_REFRESH_EXPIRATION_DAYS=7

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging settings for all services

# Log level (Trace, Debug, Information, Warning, Error, Critical, None)
LOG_LEVEL=Information

# Log file path (relative to service root)
LOG_FILE_PATH=./logs/app.log

# Enable console logging
LOG_CONSOLE_ENABLED=true

# Enable file logging
LOG_FILE_ENABLED=true

# ============================================================================
# Feature Flags
# ============================================================================
# Feature toggles for development and testing

# Enable Swagger/OpenAPI documentation
ENABLE_SWAGGER=true

# Enable health check endpoints
ENABLE_HEALTH_CHECKS=true

# Enable CORS (Cross-Origin Resource Sharing)
ENABLE_CORS=true

# Enable detailed error messages (development only)
ENABLE_DETAILED_ERRORS=true

# ============================================================================
# Security Configuration
# ============================================================================
# Security-related settings

# Enable HTTPS redirection
ENABLE_HTTPS_REDIRECT=false

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://localhost:3000,https://localhost:5001,https://localhost:5003

# ============================================================================
# Service-Specific Configuration
# ============================================================================

# DataLoaderService
# Maximum file upload size in MB
MAX_FILE_SIZE_MB=50

# Maximum rows per CSV file
MAX_CSV_ROWS=100000

# SecurityService
# Password policy: minimum length
PASSWORD_MIN_LENGTH=8

# Password policy: require uppercase
PASSWORD_REQUIRE_UPPERCASE=true

# Password policy: require lowercase
PASSWORD_REQUIRE_LOWERCASE=true

# Password policy: require numbers
PASSWORD_REQUIRE_NUMBERS=true

# Password policy: require special characters
PASSWORD_REQUIRE_SPECIAL_CHARS=false

# TaskJiraSyncService
# Sync interval in minutes
SYNC_INTERVAL_MINUTES=15

# Enable automatic task sync on push
AUTO_SYNC_ON_PUSH=true

# ============================================================================
# Optional: Azure Configuration
# ============================================================================
# Only required if using Azure services

# Azure Key Vault URL
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Storage Account connection string
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# ============================================================================
# Optional: Kiro Configuration
# ============================================================================
# Only required if using Kiro AI integration

# Kiro API key
KIRO_API_KEY=your-kiro-api-key-here

# Kiro API URL
KIRO_API_URL=https://api.kiro.dev

# ============================================================================
# Notes
# ============================================================================
# 1. Copy this file to .env in the repository root
# 2. Fill in all required values (marked with "your-" prefix)
# 3. Do NOT commit .env to version control
# 4. Add .env to .gitignore if not already present
# 5. For production, use strong, random values for secrets
# 6. Use Azure Key Vault or similar for production secrets
# 7. Never hardcode secrets in code or configuration files
# 8. Rotate secrets regularly (at least every 90 days)
