{
  "enabled": true,
  "name": "Auto Jira Sync",
  "description": "Run Jira sync when project-task.md is edited",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": ["**/project-task.md"]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run Jira sync for the current microservice. The project-task.md file was just edited. Execute all 4 sync steps automatically."
  }
}
